# ===========================================
# Notey Application Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit your .env file to version control!

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Your Supabase project URL (found in your Supabase dashboard)
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase service role key (for backend operations)
# Found in: Settings > API > Service Role (secret)
# WARNING: Keep this secret! Only use on backend/server
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Supabase anonymous key (for frontend/client operations)
# Found in: Settings > API > Anonymous (public)
SUPABASE_ANON_KEY=your_anon_key_here

# ===========================================
# AI/ML SERVICES
# ===========================================
# Google Gemini API Key for summarization
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Whisper transcription service URL
# This should point to your deployed whisper server
WHISPER_URL=https://your-whisper-service.fly.dev/transcribe

# ===========================================
# FRONTEND ENVIRONMENT VARIABLES
# ===========================================
# These are used by Vite (prefixed with VITE_)
# Note: These will be exposed to the browser, so only public values!

# Supabase URL for frontend
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous key for frontend
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Backend API URL
VITE_API_URL=http://localhost:8000

# ===========================================
# DEVELOPMENT/DEPLOYMENT SETTINGS
# ===========================================
# Environment mode
NODE_ENV=development

# Python environment
PYTHONUNBUFFERED=1
PYTHONIOENCODING=utf-8

# ===========================================
# OPTIONAL: DATABASE SETTINGS
# ===========================================
# If you're using a direct database connection instead of Supabase REST API
# DATABASE_URL=postgresql://user:password@host:port/database

# ===========================================
# OPTIONAL: STORAGE SETTINGS
# ===========================================
# Custom storage bucket names (if different from defaults)
# SUPABASE_AUDIO_BUCKET=audio
# SUPABASE_PHOTOS_BUCKET=photos

# ===========================================
# OPTIONAL: SECURITY SETTINGS
# ===========================================
# JWT secret for custom authentication (if not using Supabase auth)
# JWT_SECRET=your_jwt_secret_here

# CORS origins (comma-separated for production)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# OPTIONAL: MONITORING & LOGGING
# ===========================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=your_sentry_dsn_here

# ===========================================
# FLY.IO DEPLOYMENT (if using Fly.io)
# ===========================================
# These are typically set automatically by Fly.io
# FLY_APP_NAME=your-app-name
# FLY_REGION=sjc

# ===========================================
# WHISPER SERVER SPECIFIC
# ===========================================
# Model settings (if configurable)
# WHISPER_MODEL=base.en
# WHISPER_LANGUAGE=en
# WHISPER_DEVICE=cpu

# ===========================================
# EXAMPLE VALUES (for reference)
# ===========================================
# Here are some example formats (replace with your actual values):
#
# SUPABASE_URL=https://abcdefghijklmnop.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# GOOGLE_API_KEY=AIzaSyA1B2C3D4E5F6G7H8I9J0K1L2M3N4O5P6Q
# WHISPER_URL=https://notey-whisper.fly.dev/transcribe
